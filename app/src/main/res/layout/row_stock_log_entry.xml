<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/container"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:minHeight="48dp"
  android:clickable="true"
  android:focusable="true"
  android:background="@drawable/bg_list_item"
  android:paddingTop="10dp"
  android:paddingBottom="10dp"
  android:paddingStart="16dp"
  android:paddingEnd="20dp"
  android:gravity="center_vertical">

  <TextView
    android:id="@+id/product_name"
    style="@style/Widget.Grocy.TextView.ListItem.Title.Stock"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:singleLine="true" />

  <LinearLayout
    android:id="@+id/undone_time_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
      android:id="@+id/undone_time"
      style="@style/Widget.Grocy.TextView.ListItem.Description"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:singleLine="false" />

    <TextView
      android:id="@+id/undone_time_human"
      style="@style/Widget.Grocy.TextView.ListItem.Description"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="6dp"
      android:textStyle="italic"/>

  </LinearLayout>

  <TextView
    android:id="@+id/amount"
    style="@style/Widget.Grocy.TextView.ListItem.Description"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
      android:id="@+id/transaction_time"
      style="@style/Widget.Grocy.TextView.ListItem.Description"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />

    <TextView
      android:id="@+id/transaction_time_human"
      style="@style/Widget.Grocy.TextView.ListItem.Description"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="6dp"
      android:textStyle="italic"/>

  </LinearLayout>



  <TextView
    android:id="@+id/transaction_type"
    style="@style/Widget.Grocy.TextView.ListItem.Description"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />

  <TextView
    android:id="@+id/location"
    style="@style/Widget.Grocy.TextView.ListItem.Description"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />

  <TextView
    android:id="@+id/done_by"
    style="@style/Widget.Grocy.TextView.ListItem.Description"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />

  <TextView
    android:id="@+id/note"
    style="@style/Widget.Grocy.TextView.ListItem.Description"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textStyle="italic"/>

</LinearLayout>