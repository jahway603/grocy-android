<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical">

  <TextView
    style="@style/Widget.Grocy.TextView.Toolbar.BottomSheet"
    android:text="One small interruption" />

  <View
    style="@style/Widget.Grocy.Divider"
    android:layout_marginTop="0dp"
    android:layout_marginBottom="0dp" />

  <androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none"
    android:overScrollMode="ifContentScrolls">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:padding="16dp">

      <TextView
        android:id="@+id/text"
        style="@style/Widget.Grocy.TextView.Paragraph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp" />

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <com.google.android.material.button.MaterialButton
          android:id="@+id/button_ignore"
          style="@style/Widget.Grocy.Button.TextButton"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/on_background_secondary"
          android:text="@string/action_ignore"
          app:rippleColor="@color/highlight"
          clickUtil="@{clickUtil}"/>

        <com.google.android.material.button.MaterialButton
          android:id="@+id/button_vending"
          style="@style/Widget.Grocy.Button.UnelevatedButton"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="8dp"
          android:text="@string/action_play_store"
          app:backgroundTint="@color/retro_green_bg_white"
          clickUtil="@{clickUtil}"/>

      </LinearLayout>

    </LinearLayout>

  </androidx.core.widget.NestedScrollView>

</LinearLayout>