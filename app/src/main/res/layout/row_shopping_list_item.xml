<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/container_row"
  style="@style/Widget.Grocy.LinearLayout.ListItem.TwoLine.Clickable.More"
  android:background="@drawable/ripple_list_item_swipeable">

  <LinearLayout
    style="@style/Widget.Grocy.LinearLayout.ListItem.TextBox.Stretch">

    <TextView
      android:id="@+id/name"
      style="@style/Widget.Grocy.TextView.ListItem.Title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:singleLine="true" />

    <TextView
      android:id="@+id/note_as_name"
      style="@style/Widget.Grocy.TextView.ListItem.Title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textStyle="italic"
      android:visibility="gone" />

    <TextView
      android:id="@+id/amount"
      style="@style/Widget.Grocy.TextView.ListItem.Description"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:singleLine="true" />

    <TextView
      android:id="@+id/note"
      style="@style/Widget.Grocy.TextView.ListItem.Description"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textStyle="italic"
      android:visibility="gone" />

  </LinearLayout>

  <LinearLayout
    android:id="@+id/extra_field_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginStart="16dp"
    android:layout_gravity="top"
    android:visibility="gone">

    <TextView
      android:id="@+id/extra_field"
      style="@style/Widget.Grocy.TextView.LabelSmall"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="end"
      android:textColor="?attr/colorOnSurfaceVariant" />

    <TextView
      android:id="@+id/extra_field_subtitle"
      style="@style/Widget.Grocy.TextView.LabelSmall"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="end"
      android:visibility="gone"
      android:textColor="?attr/colorOnSurfaceVariant" />

  </LinearLayout>

</LinearLayout>