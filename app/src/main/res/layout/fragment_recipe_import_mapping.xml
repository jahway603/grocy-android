<layout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <data>
    <import type="android.view.View" />
    <import type="xyz.zedler.patrick.grocy.R" />
    <import type="xyz.zedler.patrick.grocy.model.RecipeParsed.IngredientPart" />
    <variable
      name="viewModel"
      type="xyz.zedler.patrick.grocy.viewmodel.RecipeImportViewModel" />
    <variable
      name="activity"
      type="xyz.zedler.patrick.grocy.activity.MainActivity" />
    <variable
      name="fragment"
      type="xyz.zedler.patrick.grocy.fragment.RecipeImportMappingFragment" />
  </data>

  <androidx.coordinatorlayout.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground">

    <com.google.android.material.appbar.AppBarLayout
      android:id="@+id/app_bar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true">

        <com.google.android.material.appbar.MaterialToolbar
          android:id="@+id/toolbar"
          style="@style/Widget.Grocy.Toolbar.Back"
          app:title="@string/title_recipe_import"
          app:subtitle="@{fragment.assignmentMode ? @string/subtitle_recipe_import_mapping : @string/subtitle_recipe_import_tagging}"
          app:subtitleCentered="true"
          app:subtitleTextAppearance="@style/TextAppearance.Grocy.TitleMedium"/>

        <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="end|center_vertical">

          <FrameLayout
            android:id="@+id/frame_help"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="4dp"
            android:background="?attr/actionBarItemBackground"
            android:clickable="true"
            android:gravity="center"
            android:contentDescription="@string/action_display_help"
            android:tooltipText="@string/action_display_help"
            android:focusable="true"
            tools:targetApi="o"
            android:onClick="@{() -> viewModel.toggleDisplayHelpLive()}">

            <ImageView
              style="@style/Widget.Grocy.ImageView.Icon"
              android:layout_gravity="center"
              android:importantForAccessibility="no"
              android:src="@{viewModel.displayHelpLive ? @drawable/ic_round_help : @drawable/ic_round_help_outline_anim}" />

          </FrameLayout>

        </LinearLayout>

      </FrameLayout>

      <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:overScrollMode="ifContentScrolls"
        android:paddingStart="16dp"
        android:paddingEnd="0dp"
        android:layout_marginBottom="4dp"
        android:visibility="@{fragment.assignmentMode ? View.GONE : View.VISIBLE}">

        <com.google.android.material.button.MaterialButtonToggleGroup
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:paddingStart="0dp"
          android:paddingEnd="16dp"
          app:singleSelection="true"
          app:selectionRequired="true">

          <com.google.android.material.button.MaterialButton
            style="@style/Widget.Grocy.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:text="@string/property_amount"
            android:backgroundTint="@{viewModel.mappingEntityLive == IngredientPart.ENTITY_AMOUNT ? @color/teal_primary_90 : @color/transparent}"
            android:checked="@{viewModel.mappingEntityLive == IngredientPart.ENTITY_AMOUNT}"
            android:onClick="@{v -> viewModel.setMappingEntityLive(IngredientPart.ENTITY_AMOUNT)}"
            tools:ignore="TextContrastCheck" />

          <com.google.android.material.button.MaterialButton
            style="@style/Widget.Grocy.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:text="@string/property_quantity_unit"
            android:backgroundTint="@{viewModel.mappingEntityLive == IngredientPart.ENTITY_UNIT ? @color/yellow_primary_90 : @color/transparent}"
            android:checked="@{viewModel.mappingEntityLive == IngredientPart.ENTITY_UNIT}"
            android:onClick="@{v -> viewModel.setMappingEntityLive(IngredientPart.ENTITY_UNIT)}"
            tools:ignore="TextContrastCheck" />

          <com.google.android.material.button.MaterialButton
            style="@style/Widget.Grocy.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:text="@string/property_product"
            android:backgroundTint="@{viewModel.mappingEntityLive == IngredientPart.ENTITY_PRODUCT ? @color/red_primary_90 : @color/transparent}"
            android:checked="@{viewModel.mappingEntityLive == IngredientPart.ENTITY_PRODUCT}"
            android:onClick="@{v -> viewModel.setMappingEntityLive(IngredientPart.ENTITY_PRODUCT)}"
            tools:ignore="TextContrastCheck" />

          <com.google.android.material.button.MaterialButton
            style="@style/Widget.Grocy.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:text="@string/property_extra_info"
            android:backgroundTint="@{viewModel.mappingEntityLive == IngredientPart.ENTITY_EXTRA_INFO ? @color/green_primary_90 : @color/transparent}"
            android:checked="@{viewModel.mappingEntityLive == IngredientPart.ENTITY_EXTRA_INFO}"
            android:onClick="@{v -> viewModel.setMappingEntityLive(IngredientPart.ENTITY_EXTRA_INFO)}"
            tools:ignore="TextContrastCheck" />

        </com.google.android.material.button.MaterialButtonToggleGroup>

      </HorizontalScrollView>

    </com.google.android.material.appbar.AppBarLayout>

    <xyz.zedler.patrick.grocy.view.swiperefreshlayout.CustomSwipeRefreshLayout
      android:id="@+id/swipe"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_below="@+id/app_bar"
      android:overScrollMode="never"
      app:setRefreshing="@{viewModel.isLoadingLive}"
      app:onRefreshListener="@{() -> viewModel.downloadDataForceUpdate()}">

      <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/recycler"
          style="@style/Widget.Grocy.RecyclerView"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:paddingBottom="144dp"
          android:clipToPadding="false"
          android:layoutAnimation="@anim/recycler_layout"
          app:layout_anchor="@+id/swipe"
          app:layout_anchorGravity="center" />

      </FrameLayout>

    </xyz.zedler.patrick.grocy.view.swiperefreshlayout.CustomSwipeRefreshLayout>


  </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>