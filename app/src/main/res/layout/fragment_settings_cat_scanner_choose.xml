<layout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <data>
    <import type="android.view.View" />
    <import type="xyz.zedler.patrick.grocy.R" />
    <import type="xyz.zedler.patrick.grocy.Constants" />
    <variable
      name="viewModel"
      type="xyz.zedler.patrick.grocy.viewmodel.SettingsViewModel" />
    <variable
      name="activity"
      type="xyz.zedler.patrick.grocy.activity.MainActivity" />
    <variable
      name="fragment"
      type="xyz.zedler.patrick.grocy.fragment.SettingsCatScannerChooseFragment" />
    <variable
      name="sharedPrefs"
      type="android.content.SharedPreferences" />
    <variable
      name="clickUtil"
      type="xyz.zedler.patrick.grocy.util.ClickUtil" />
  </data>

  <androidx.coordinatorlayout.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground">

    <com.google.android.material.appbar.AppBarLayout
      android:id="@+id/app_bar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        style="@style/Widget.Grocy.Toolbar.Back"
        app:title="@string/title_barcode_scanner" />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
      android:id="@+id/linear_container_unlock"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:visibility="@{viewModel.appUnlocked ? View.GONE : View.VISIBLE}"
      android:layout_marginTop="?attr/actionBarSize"
      android:paddingBottom="92dp">

      <com.google.android.material.card.MaterialCardView
        style="@style/Widget.Grocy.Card.Text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="0dp"
        app:contentPadding="0dp">

        <androidx.core.widget.NestedScrollView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:scrollbars="vertical"
          android:scrollbarThumbVertical="@drawable/shape_scrollbar_rounded">

          <xyz.zedler.patrick.grocy.view.FormattedTextView
            android:id="@+id/formatted_ml_kit_intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        </androidx.core.widget.NestedScrollView>

      </com.google.android.material.card.MaterialCardView>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="12dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
          android:id="@+id/button_github"
          style="@style/Widget.Grocy.Button.OutlinedButton"
          android:text="@string/action_github"
          android:onClick="@{() -> fragment.openGitHub()}"
          clickUtil="@{clickUtil}"/>

        <com.google.android.material.button.MaterialButton
          android:id="@+id/button_github_no_vending"
          style="@style/Widget.Grocy.Button.UnelevatedButton"
          android:text="@string/action_github"
          android:onClick="@{() -> fragment.openGitHub()}"
          clickUtil="@{clickUtil}"/>

        <com.google.android.material.button.MaterialButton
          android:id="@+id/button_vending"
          style="@style/Widget.Grocy.Button.UnelevatedButton"
          android:layout_marginStart="8dp"
          android:text="@string/action_play_store"
          android:onClick="@{() -> fragment.openPlayStore()}"
          clickUtil="@{clickUtil}"/>

      </LinearLayout>

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
      android:id="@+id/scroll"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginTop="?attr/actionBarSize"
      android:overScrollMode="never"
      android:visibility="@{viewModel.appUnlocked ? View.VISIBLE : View.GONE}">

      <LinearLayout
        android:id="@+id/linear_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="@dimen/global_scroll_bottom_padding"
        android:orientation="vertical"
        android:animateLayoutChanges="true"
        app:transitionTypeChanging="@{true}">

        <com.google.android.material.card.MaterialCardView
          style="@style/Widget.Grocy.Card.Text"
          android:layout_marginTop="8dp"
          android:layout_marginStart="16dp"
          android:layout_marginEnd="16dp"
          android:layout_marginBottom="0dp">

          <TextView
            style="@style/Widget.Grocy.TextView.Paragraph.Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{@string/msg_help_barcode_scanner_choose}" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButtonToggleGroup
          android:id="@+id/toggle_select_scanner"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:paddingStart="16dp"
          android:paddingEnd="16dp"
          android:layout_marginTop="12dp"
          android:layout_marginBottom="12dp"
          android:layout_gravity="center_horizontal"
          app:singleSelection="true"
          app:selectionRequired="true"
          tools:ignore="HardcodedText">

          <com.google.android.material.button.MaterialButton
            android:id="@+id/button_xzing"
            style="@style/Widget.Grocy.Button.OutlinedButton"
            android:text="XZing" />

          <com.google.android.material.button.MaterialButton
            android:id="@+id/button_mlkit"
            style="@style/Widget.Grocy.Button.OutlinedButton"
            android:text="ML Kit" />

        </com.google.android.material.button.MaterialButtonToggleGroup>

        <com.google.android.material.card.MaterialCardView
          android:id="@+id/card_info_mlkit"
          style="@style/Widget.Grocy.Card.Text"
          android:layout_marginTop="0dp"
          android:layout_marginStart="16dp"
          android:layout_marginEnd="16dp"
          android:layout_marginBottom="0dp"
          app:contentPadding="0dp">

          <xyz.zedler.patrick.grocy.view.FormattedTextView
            android:id="@+id/formatted_scanner_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        </com.google.android.material.card.MaterialCardView>

      </LinearLayout>

    </androidx.core.widget.NestedScrollView>

  </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>