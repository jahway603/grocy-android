<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:paddingStart="8dp"
  android:paddingEnd="0dp">

  <androidx.constraintlayout.helper.widget.Flow
    android:id="@+id/flow_layout"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:paddingVertical="16dp"
    android:paddingHorizontal="8dp"
    app:constraint_referenced_ids=""
    app:flow_horizontalBias="0"
    app:flow_horizontalGap="12dp"
    app:flow_horizontalStyle="packed"
    app:flow_verticalBias="0"
    app:flow_verticalGap="8dp"
    app:flow_wrapMode="chain"
    app:layout_constraintEnd_toStartOf="@id/buttons_info"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <com.google.android.material.divider.MaterialDivider
    android:id="@+id/divider"
    style="@style/Widget.Grocy.Divider.Margin"
    android:layout_marginVertical="0dp"
    android:layout_marginHorizontal="8dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"/>

  <LinearLayout
    android:id="@+id/buttons_info"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingStart="4dp"
    android:paddingEnd="0dp"
    app:layout_constraintEnd_toStartOf="@id/toolbar"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <ImageView
      android:id="@+id/button_error"
      android:visibility="gone"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:padding="8dp"
      android:src="@drawable/ic_round_error_outline"
      android:background="@drawable/ripple_icon"
      android:clickable="true"
      android:focusable="true"
      tools:ignore="ContentDescription"/>

    <ImageView
      android:id="@+id/button_complete"
      android:visibility="gone"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:padding="8dp"
      android:src="@drawable/ic_round_check_circle_outline"
      android:background="@drawable/ripple_icon"
      android:clickable="true"
      android:focusable="true"
      tools:ignore="ContentDescription"/>

  </LinearLayout>

  <com.google.android.material.appbar.MaterialToolbar
    android:id="@+id/toolbar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:contentInsetStart="2dp"
    app:contentInsetEnd="0dp"
    app:contentPadding="0dp"
    app:menu="@menu/menu_recipe_import_tagging" />

</androidx.constraintlayout.widget.ConstraintLayout>
