<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/linear_container"
  style="@style/Widget.Grocy.LinearLayout.ListItem.SingleLine.Clickable.More"
  android:background="@drawable/ripple_list_item_swipeable">

  <LinearLayout
    style="@style/Widget.Grocy.LinearLayout.ListItem.TextBox.Stretch"
    android:orientation="horizontal"
    android:gravity="start">

    <FrameLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      tools:ignore="UselessParent">

      <TextView
        android:id="@+id/text_name"
        style="@style/Widget.Grocy.TextView.ListItem.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="11dp"
        android:singleLine="true" />

      <View
        android:id="@+id/view_on_shopping_list"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_gravity="center_vertical|end"
        android:layout_marginTop="1dp"
        android:visibility="gone"
        android:background="@drawable/shape_circle" />

    </FrameLayout>

  </LinearLayout>

  <TextView
    android:id="@+id/text_amount"
    style="@style/Widget.Grocy.TextView.ListItem.Description"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:singleLine="true" />

  <LinearLayout
    android:id="@+id/linear_days"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_marginStart="10dp">

    <View
      android:layout_width="3dp"
      android:layout_height="3dp"
      android:layout_gravity="center_vertical"
      android:layout_marginEnd="10dp"
      android:backgroundTint="?attr/colorOnSurfaceVariant"
      android:background="@drawable/shape_circle" />

    <TextView
      android:id="@+id/text_days"
      style="@style/Widget.Grocy.TextView.ListItem.Description"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:singleLine="true" />

  </LinearLayout>

  <LinearLayout
    android:id="@+id/extra_field_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginStart="16dp"
    android:layout_gravity="top"
    android:visibility="gone">

    <TextView
      android:id="@+id/extra_field"
      style="@style/Widget.Grocy.TextView.LabelSmall"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="end"
      android:textColor="?attr/colorOnSurfaceVariant" />

    <TextView
      android:id="@+id/extra_field_subtitle"
      style="@style/Widget.Grocy.TextView.LabelSmall"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="end"
      android:visibility="gone"
      android:textColor="?attr/colorOnSurfaceVariant" />

  </LinearLayout>

  <ImageView
    android:id="@+id/picture"
    android:layout_width="56dp"
    android:layout_height="56dp"
    android:layout_marginStart="16dp"
    android:layout_gravity="center_vertical|end"
    tools:ignore="ContentDescription" />

  <com.google.android.material.card.MaterialCardView
    android:id="@+id/picture_placeholder"
    android:layout_width="56dp"
    android:layout_height="56dp"
    android:layout_marginStart="16dp"
    android:layout_gravity="center_vertical|end"
    android:visibility="gone"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp"
    app:strokeWidth="0dp"
    app:cardBackgroundColor="?attr/colorSurfaceVariant">

    <ImageView
      style="@style/Widget.Grocy.ImageView.Icon"
      android:src="@drawable/ic_round_image"
      android:layout_gravity="center"
      tools:ignore="ContentDescription" />

  </com.google.android.material.card.MaterialCardView>

</LinearLayout>